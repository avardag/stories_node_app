<h1>Add story</h1>
<div class="row">
  <form action="/stories" method="POST" class="col s12">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title">
        <label for="title">Title</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <select name="status" id="status">
          <option value="" disabled>Choose your option</option>
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <option value="unpublished">Unpublished</option>
        </select>
        <label for="status">Status</label>
      </div>
    </div>
    
    <div class="row">
      <p>
        <label>
          <input type="checkbox" name="allowComments" class="filled-in" checked="checked" />
          <span>Allow Comments</span>
        </label>
      </p>
    </div>
    <div class="row">
      <div class="input-field">
        <h5>Tell us your story:</h5>
        <textarea name="body" id="textBody" class="materialize-textarea"></textarea>
      </div>
    </div>
    <input type="submit" value="save" class="btn">
  </form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('select');
    var instances = M.FormSelect.init(elems);
  });
  
</script>